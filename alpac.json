{
  "name": "ouicomply-mcp",
  "version": "1.0.0",
  "description": "OuiComply MCP Server - AI Assisted Legal Compliance Checker",
  "main": "mcp_http_server.py",
  "scripts": {
    "start": "python mcp_http_server.py",
    "dev": "python main.py",
    "health": "python health_check.py"
  },
  "dependencies": {
    "mcp": ">=1.0.0",
    "python-dotenv": ">=1.0.0",
    "pydantic": ">=2.0.0",
    "pydantic-settings": ">=2.0.0",
    "mistralai": ">=1.9.0",
    "httpx": ">=0.25.0",
    "structlog": ">=23.0.0",
    "asyncio-mqtt": ">=0.16.0",
    "PyPDF2": ">=3.0.0",
    "python-docx": ">=0.8.11",
    "python-magic": ">=0.4.27",
    "Pillow": ">=10.0.0",
    "pandas": ">=2.0.0",
    "numpy": ">=1.24.0",
    "jsonschema": ">=4.17.0"
  },
  "engines": {
    "python": ">=3.10"
  },
  "environment": {
    "ALPIC_ENV": "true",
    "ENABLE_HEALTH_CHECK": "true",
    "HEALTH_CHECK_PATH": "/health",
    "LOG_LEVEL": "INFO",
    "LOG_FORMAT": "json",
    "MCP_API_TOKEN": "your_secure_api_token_here"
  },
  "health_check": {
    "enabled": true,
    "path": "/health",
    "detailed_path": "/health/detailed",
    "timeout": 30
  },
  "deployment": {
    "type": "mcp_server",
    "protocol": "http",
    "endpoint": "/mcp",
    "alternative_endpoint": "/ssc",
    "timeout": 300,
    "memory_limit": "512MB",
    "cpu_limit": "0.5"
  }
}
